var printage = function(t, folder){
  var year = t.toString();
  t= ee.Number(t).subtract(1990);
  var img = ee.Image(folder.get(t));
  // img = ee.Image([26]).where(img.lte(25).gte(0), img).clip(totalarea_outline)
  var taskname = ee.String('Age_Riau_North').cat(ee.String(year));
  Map.addLayer(img.updateMask(img.neq(9999)), {min: 0, max: 25,
    palette:[ '#fff832','#4cff62','#196e0a']}, year);
  // Export.image.toDrive({
  //   image: img,
  //   description: taskname.getInfo(),
  //   scale: 100,
  //   region: totalarea_outline,
  //   // region: totalarea_outline,
  //   maxPixels: 1e13
  // });
  return(3);
};

var t=2010;
var p = printage(t, Gunarso_agefinal);
